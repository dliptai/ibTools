#!/bin/sh

dir=/root/ib

export PATH=$PATH:/usr/sbin:$dir

file="`date +'%F-%T'`"
# serial
for f in ibnetdiscover; do
   n=`echo $f | cut -d. -f1`
   n=`echo $n | cut -d' ' -f1`
   $f > $file.$n 2>&1
done
# parallel
for f in "ibcheckerrors.rjh -N -T $dir/thresholds $file.ibnetdiscover" "ibqueryerrors -rR -s LinkDowned,RcvSwRelayErrors,XmtDiscards,XmtWait"; do
   n=`echo $f | cut -d. -f1`
   n=`echo $n | cut -d' ' -f1`
   $f > $file.$n 2>&1 &
done
wait
ibPerfqueryAll.py $file.perfstats > $file.perfstats.out 2>&1
rebootedRecently.py > $file.rebooted
ibFlagErrors.py > $file.flagerrors.summary
ibFlagErrors.py -a -l -r > $file.flagerrors
